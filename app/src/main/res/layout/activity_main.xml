<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:background="@color/common_confirm_text_color"
        android:gravity="center"
        android:text="音视频演示Demo"
        android:textColor="@color/white"
        android:textSize="@dimen/padding_18" />



    <TextView
        android:id="@+id/tv_to_tencent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:layout_below="@id/title"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:background="@drawable/shape_dialog_bg_case_confirm"
        android:gravity="center"
        android:text="跳转，腾讯直播界面"
        android:textColor="@color/white"
        android:textSize="@dimen/padding_18" />

    <TextView
        android:id="@+id/tv_to_universal_player"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:layout_below="@id/tv_to_tencent"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:background="@drawable/shape_dialog_bg_case_confirm"
        android:gravity="center"
        android:text="跳转，统一播放器Demo(录像/截图)"
        android:textColor="@color/white"
        android:textSize="@dimen/padding_18" />

</RelativeLayout>