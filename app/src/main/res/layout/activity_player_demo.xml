<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 顶部标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2196F3"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/ic_player_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="统一播放器"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- 播放地址输入 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放地址："
        android:textColor="#666666"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_url"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_edit_bg"
        android:hint="请输入播放地址 (rtsp/rtmp/http)"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:singleLine="true"
        android:textSize="14sp" />

    <!-- 播放器类型选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="选择播放器内核："
        android:textColor="#666666"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/rg_player_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_vlc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="VLC" />

        <RadioButton
            android:id="@+id/rb_ijk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IJK" />

        <RadioButton
            android:id="@+id/rb_media_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="系统" />

    </RadioGroup>

    <!-- 提示信息 -->
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#FF9800"
        android:textSize="12sp" />

    <!-- 播放速度选择 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="播放速度："
        android:textColor="#666666"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/rg_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_speed_05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.5x" />

        <RadioButton
            android:id="@+id/rb_speed_075"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.75x" />

        <RadioButton
            android:id="@+id/rb_speed_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="1.0x" />

        <RadioButton
            android:id="@+id/rb_speed_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1.5x" />

        <RadioButton
            android:id="@+id/rb_speed_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.0x" />

    </RadioGroup>

    <!-- 播放按钮 -->
    <Button
        android:id="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_dialog_bg_case_confirm"
        android:text="开始播放"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- 功能说明 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="说明：\n• 点击播放按钮进入全屏播放界面\n• 点击视频区域显示/隐藏控制栏\n• VLC 内核支持录像和截图功能\n• 支持锁屏和全屏切换"
        android:textColor="#999999"
        android:textSize="12sp"
        android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout>
